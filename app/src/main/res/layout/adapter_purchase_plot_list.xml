<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_locker_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/f5"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="@dimen/f3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_plot_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/f5"
            android:text="name"
            android:textColor="@color/whiteText1"
            android:textSize="@dimen/f16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/f5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/f5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:text="Site"
                    android:textSize="@dimen/f16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text=" : "
                    android:gravity="center_vertical"
                    android:textSize="@dimen/f16" />

                <TextView
                    android:id="@+id/txt_site_address"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Site"
                    android:textColor="@color/blackText1"
                    android:textSize="@dimen/f16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/f5"
                android:paddingLeft="@dimen/f5"
                android:paddingRight="@dimen/f5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:text="Purchased On"
                    android:textSize="@dimen/f16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text=" : "
                    android:gravity="center_vertical"
                    android:textSize="@dimen/f16" />

                <TextView
                    android:id="@+id/txt_purchased_on"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Purchased on"
                    android:gravity="center_vertical"
                    android:textColor="@color/blackText1"
                    android:textSize="@dimen/f16" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/f5"
                android:paddingLeft="@dimen/f5"
                android:paddingRight="@dimen/f5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:text="Purchase Price"
                    android:textSize="@dimen/f16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text=" : "
                    android:gravity="center_vertical"
                    android:textSize="@dimen/f16" />

                <TextView
                    android:id="@+id/txt_purchased_price"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Purchase Price"
                    android:textColor="@color/blackText1"
                    android:textSize="@dimen/f16" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/f5"
                android:paddingLeft="@dimen/f5"
                android:paddingRight="@dimen/f5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:text="Paid Amount"
                    android:textSize="@dimen/f16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text=" : "
                    android:gravity="center_vertical"
                    android:textSize="@dimen/f16" />

                <TextView
                    android:id="@+id/txt_paid_amount"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Paid amount"
                    android:textColor="@color/blackText1"
                    android:textSize="@dimen/f16" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/f5"
                android:paddingLeft="@dimen/f5"
                android:paddingRight="@dimen/f5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:text="Pending Amount"
                    android:textSize="@dimen/f16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text=" : "
                    android:gravity="center_vertical"
                    android:textSize="@dimen/f16" />

                <TextView
                    android:id="@+id/txt_pending_amount"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Pending Amount"
                    android:textColor="@color/blackText1"
                    android:textSize="@dimen/f16" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
