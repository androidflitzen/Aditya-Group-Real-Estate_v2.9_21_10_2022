<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBill"
            android:layout_width="match_parent"
            android:layout_height="@dimen/SizeImg250dp"
            android:layout_marginTop="@dimen/f10"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/f10"
            android:layout_marginTop="@dimen/f28"
            android:layout_marginRight="@dimen/f10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="Month"
                android:paddingLeft="@dimen/f10"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/f5"
                android:paddingRight="@dimen/f5"
                android:text=":"
                android:textSize="@dimen/f16" />

            <TextView
                android:id="@+id/tvBillMonth"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/f10"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/f16" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/f10"
            android:layout_marginTop="@dimen/f10"
            android:layout_marginRight="@dimen/f10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="Bill Amount"
                android:paddingLeft="@dimen/f10"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/f5"
                android:paddingRight="@dimen/f5"
                android:text=":"
                android:textSize="@dimen/f16" />

            <TextView
                android:id="@+id/tvBillPrice"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/f10"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/f16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/f10"
            android:layout_marginTop="@dimen/f10"
            android:layout_marginRight="@dimen/f10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="Other Note"
                android:paddingLeft="@dimen/f10"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/f5"
                android:paddingRight="@dimen/f5"
                android:text=":"
                android:textSize="@dimen/f16" />

            <TextView
                android:id="@+id/tvOtherNote"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/f10"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/f16" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>