<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/f16"
        android:text="Edit Property"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/whiteText1"
        android:textSize="@dimen/f16" />


        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_img_close_r"
            android:layout_centerVertical="true"

            android:layout_alignParentRight="true"
            android:id="@+id/img_close"
            android:layout_marginRight="@dimen/_5sdp"
            tools:ignore="VectorDrawableCompat" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/f16">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_property_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Property Name"
                android:singleLine="true"
                android:textSize="@dimen/f16" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f5">

            <EditText
                android:id="@+id/edt_property_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:singleLine="true"
                android:textSize="@dimen/f16" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f5">

            <EditText
                android:id="@+id/edit_rent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rent"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/f16" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f5">

            <EditText
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:inputType="number"
                android:singleLine="true"
                android:focusable="false"
                android:textIsSelectable="false"
                android:drawableRight="@drawable/ic_calendar"
                android:textSize="@dimen/f16" />

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f5"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/f16"
                android:text="Cancel"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />

            <Button
                android:id="@+id/btn_update_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/f10"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"

                android:layout_marginRight="@dimen/f10"
                android:background="@drawable/green_round_corner_button"
                android:text="Update"
                android:textColor="@android:color/white"
                android:textSize="@dimen/f16" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
