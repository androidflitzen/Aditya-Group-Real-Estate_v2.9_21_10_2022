<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/f5"
    android:background="@android:color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/f3">

    <LinearLayout
        android:id="@+id/liMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9.9"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/f10">

            <TextView
                android:id="@+id/txt_cust_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gfgfgfd"
                android:textAllCaps="true"
                android:textColor="@color/blackText1"
                android:textSize="@dimen/f18"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_cust_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivEditAcitve"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_8sdp"
                android:visibility="gone"
                android:layout_marginRight="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_edit"
                app:tint="@color/black" />


            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_8sdp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_delete"
                app:tint="#ee4036" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/ivPopUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:checked="true">

            </com.google.android.material.switchmaterial.SwitchMaterial>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
