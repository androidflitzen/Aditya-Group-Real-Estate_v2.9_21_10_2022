            android:layout_weight="1"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="7dp">

        </TextView>

        <View
            android:layout_width="@dimen/_1sdp"
