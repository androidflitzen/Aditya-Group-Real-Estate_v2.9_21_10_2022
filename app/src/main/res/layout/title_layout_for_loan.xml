                </TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
                android:background="@color/black">

            </View>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
