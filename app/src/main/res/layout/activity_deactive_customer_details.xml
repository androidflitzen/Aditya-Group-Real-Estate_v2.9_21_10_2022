            <LinearLayout
                android:id="@+id/ll_plot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/f10"
                    android:text="Purchased Plot"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/f16" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_purchased_plot_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/f10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rented"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/f10"
                    android:text="Rented Property"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/f16" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_rented_property_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/f10" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/view_activae_customer"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/f16"
                app:cardBackgroundColor="@color/color_green"
                app:cardCornerRadius="14dp"
                android:visibility="gone"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="@dimen/f20"
                    android:paddingRight="@dimen/f20"
                    android:text="ACTIVATE CUSTOMER"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/f14" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.flitzen.adityarealestate_new.Classes.TouchImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="invisible" />

</RelativeLayout>