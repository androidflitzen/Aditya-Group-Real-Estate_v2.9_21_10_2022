<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/f16"
        android:text="Assign plot"
        android:textAllCaps="true"
        android:textColor="@color/whiteText1"
        android:textSize="@dimen/f16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/f16">

        <TextView
            android:id="@+id/txt_plot_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/f10"
            android:text="empty plot"
            android:textColor="@color/blackText1"
            android:textSize="@dimen/f16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sale to customer"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/f14" />

        <TextView
            android:id="@+id/spn_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f10"
            android:background="@drawable/bg_only_gray_border"
            android:drawableRight="@drawable/ic_down_arrow"
            android:padding="10dp"
            android:text="Select Customer"
            android:textColor="@color/blackText1"
            android:textSize="@dimen/f16" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/f10"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_sell_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sell Price"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/f16" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of purchase"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/f14" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f10"
            android:background="@drawable/bg_only_gray_border"
            android:drawableRight="@drawable/ic_calendar"
            android:editable="false"
            android:hint="Date of purchase"
            android:padding="10dp"
            android:textSize="@dimen/f16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f10"
            android:gravity="right"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/btn_assign_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/f10"
                    android:layout_gravity="start"
                    android:layout_marginRight="@dimen/f10"
                    android:background="@drawable/red_round_corner_button"
                    android:text="Delete"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/f16" />

                <TextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/btn_assign_plot"
                    android:padding="@dimen/f16"
                    android:text="Cancel"
                    android:textColor="@color/blackText2"
                    android:textSize="@dimen/f16" />

                <Button
                    android:id="@+id/btn_assign_plot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/f10"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/f10"
                    android:background="@drawable/green_round_corner_button"
                    android:text="Add"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/f16" />


            </RelativeLayout>





        </LinearLayout>

    </LinearLayout>


</LinearLayout>
