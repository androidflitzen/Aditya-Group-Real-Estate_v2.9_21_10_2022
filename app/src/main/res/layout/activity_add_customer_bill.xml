    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/f10"
        android:layout_marginRight="@dimen/f10"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f20">

            <EditText
                android:id="@+id/etBillMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bill Month"
                android:singleLine="true"
                android:textSize="@dimen/f14" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--<android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f10">

            <EditText
                android:id="@+id/etBillPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bill Price"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/f14" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f10">

            <EditText
                android:id="@+id/etBillNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bill Note"
                android:singleLine="true"
                android:textSize="@dimen/f14" />

        </android.support.design.widget.TextInputLayout>-->

        <LinearLayout
            android:id="@+id/layoutImgUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/f28"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivUploadImg"
                android:layout_width="@dimen/SizeImg250dp"
                android:layout_height="@dimen/SizeImg250dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_add_image" />

            <TextView
                android:id="@+id/lblAddBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/f10"
                android:text="Add Bill Image"
                android:textColor="@color/blackText1"
                android:textSize="@dimen/f20" />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/txt_add_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="Save"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/f16"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>