<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/f16"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_manage_sites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/f20"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/SizeImg52dp"
                android:layout_height="@dimen/SizeImg52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/f8"
                app:srcCompat="@drawable/ic_manage_site" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="@dimen/f10"
                android:text="Manage Sites"
                android:textColor="@android:color/white"
                android:textSize="@dimen/f16"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_manage_plots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/f20"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/SizeImg52dp"
                android:layout_height="@dimen/SizeImg52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/f8"
                app:srcCompat="@drawable/ic_manage_plot" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/f10"
                android:text="Manage Plots"
                android:textColor="@android:color/white"
                android:textSize="@dimen/f16"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_manage_properties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/f20"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/SizeImg52dp"
                android:layout_height="@dimen/SizeImg52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/f8"
                app:srcCompat="@drawable/ic_manage_property" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/f10"
                android:text="Manage Properties"
                android:textColor="@android:color/white"
                android:textSize="@dimen/f16"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>