<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="1dp"
    app:cardElevation="@dimen/f3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="abc"

                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingRight="@dimen/_2sdp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount: "
                    android:textSize="@dimen/f16"
                    android:paddingLeft="@dimen/_4sdp"
                    android:textColor="@color/blackText2"/>

                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="12"
                    android:textSize="@dimen/f16"
                    android:paddingRight="@dimen/_7sdp"
                    android:textColor="@color/blackText1"
                    />
            </LinearLayout>



            <ImageView
                android:id="@+id/plotSummaryEdit"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone"
                android:src="@drawable/ic_edit"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:tint="@color/black"/>



        </LinearLayout>



        <TextView
            android:id="@+id/txt_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/_3sdp"
            android:text="dfadfdafdsafdsafdsafsafsafddfdsafafdsaf"
            android:maxLines="2"
            android:paddingBottom="@dimen/_3sdp"

            android:layout_marginLeft="@dimen/_2sdp"
            android:textColor="@color/blackText2"
            android:textSize="@dimen/f16"
            android:visibility="visible" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
