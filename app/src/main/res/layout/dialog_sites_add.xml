<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/f16"
        android:text="Add Site"
        android:textAllCaps="true"
        android:textColor="@color/whiteText1"
        android:textSize="@dimen/f20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/f16">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_site_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Site Name"
                android:inputType="textCapCharacters"
                android:singleLine="true"
                android:textSize="@dimen/f16" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_site_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Site Address"
                android:textSize="@dimen/f16" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_site_purchase_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Site Purchase Price"
                android:inputType="number"
                android:textSize="@dimen/f16" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_site_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Site Size (Square Yard)"
                android:inputType="numberDecimal"
                android:textSize="@dimen/f16" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/f16"
                android:text="Cancel"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />

            <Button
                android:id="@+id/btn_add_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/f10"
                android:layout_marginRight="@dimen/f10"
                android:background="@drawable/green_round_corner_button"
                android:text="Add"
                android:textColor="@android:color/white"
                android:textSize="@dimen/f20" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
