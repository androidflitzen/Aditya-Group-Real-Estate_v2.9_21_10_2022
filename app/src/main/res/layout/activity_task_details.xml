<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <!--<ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">-->

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/f16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="Subject"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/f4"
                android:paddingRight="@dimen/f4"
                android:text=":"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />

            <TextView
                android:id="@+id/txt_task_subject"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/blackText1"
                android:textSize="@dimen/f16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="Description : "
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/f4"
                android:paddingRight="@dimen/f4"
                android:text=":"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />

            <TextView
                android:id="@+id/txt_task_desc"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/blackText1"
                android:textSize="@dimen/f16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="Task Date"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/f4"
                android:paddingRight="@dimen/f4"
                android:text=":"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />

            <TextView
                android:id="@+id/txt_task_date"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/blackText1"
                android:textSize="@dimen/f16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="Task Time"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/f4"
                android:paddingRight="@dimen/f4"
                android:text=":"
                android:textColor="@color/blackText2"
                android:textSize="@dimen/f16" />

            <TextView
                android:id="@+id/txt_task_time"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/blackText1"
                android:textSize="@dimen/f16" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/f5"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/view_complete_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="@dimen/f28"
                        android:paddingRight="@dimen/f28"
                        android:text="Complete Task"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/f5"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/view_remove_task"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/msg_fail"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="@dimen/f28"
                        android:paddingRight="@dimen/f28"
                        android:text="Delete Task"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/view_edit_task"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardBackgroundColor="@color/color_green"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/f28"
                android:paddingRight="@dimen/f28"
                android:text="Edit Task"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <!--</ScrollView>-->

    <GridView
        android:id="@+id/gvAttachments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/f5"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:horizontalSpacing="2dp"
        android:numColumns="3"
        android:verticalSpacing="2dp" />
</RelativeLayout>